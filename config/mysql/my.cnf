[mysqld]
# Server Configuration
server-id = 1
bind-address = 0.0.0.0
port = 3306

# Character set configuration
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Connection configuration
max_connections = 300
max_connect_errors = 100000
max_user_connections = 50
connect_timeout = 10
wait_timeout = 28800
interactive_timeout = 28800

# Table cache and thread configuration
table_open_cache = 4000
table_definition_cache = 2000
thread_cache_size = 32
thread_stack = 256K

# InnoDB Configuration (Optimized for E-commerce)
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 2
innodb_buffer_pool_chunk_size = 128M
innodb_buffer_pool_dump_at_shutdown = 1
innodb_buffer_pool_load_at_startup = 1

# InnoDB Log Configuration
innodb_redo_log_capacity = 256M
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

# InnoDB I/O Configuration
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_read_io_threads = 8
innodb_write_io_threads = 8

# InnoDB Performance
innodb_adaptive_hash_index = ON
innodb_adaptive_flushing = ON
innodb_lru_scan_depth = 2048
innodb_change_buffering = all

# Security settings for development
skip-name-resolve
local-infile = 0
symbolic-links = 0

# Time zone
default-time-zone = '+09:00'

# SQL mode for development (strict but compatible)
sql_mode = "ONLY_FULL_GROUP_BY,STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

# Logging Configuration
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1
log_queries_not_using_indexes = 0

# Binary log configuration (enabled for development consistency)
log-bin = mysql-bin
binlog_format = ROW
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M

# Performance Schema
performance_schema = ON
performance_schema_max_table_instances = 12500
performance_schema_max_table_handles = 4000

# Sort and group configuration
sort_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M
join_buffer_size = 2M

# Temporary table settings
tmp_table_size = 64M
max_heap_table_size = 64M

# MyISAM configuration (for system tables)
key_buffer_size = 32M
myisam_sort_buffer_size = 64M

# Network settings
max_allowed_packet = 64M
net_buffer_length = 32K

# Replication settings (for future scaling)
relay_log_recovery = 1
slave_parallel_workers = 4
slave_parallel_type = LOGICAL_CLOCK

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4